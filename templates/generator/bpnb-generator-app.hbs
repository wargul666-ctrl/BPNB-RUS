<form class="bpnb-generator-form">
  <div class="generator-container">
    <!-- ЛЕВАЯ КОЛОНКА: Имя и классы -->
    <div class="generator-left">
      <h2>Генератор персонажей</h2>

      <div class="form-group">
        <label for="bpnb-name-input">Имя персонажа:</label>
        <input 
          id="bpnb-name-input" 
          type="text" 
          name="character_name"
          placeholder="Оставьте пустым для случайного имени"
        />
      </div>

      <h3>Выберите классы</h3>
      <div class="classes-list">
        {{#each classes as |classItem|}}
        <div class="class-group">
          <label class="class-checkbox">
            <input 
              type="checkbox" 
              name="class_{{classItem.id}}" 
              checked 
            />
            <strong>{{classItem.name}}</strong>
          </label>

          {{#if ../subclasses}}
          <div class="subclasses-list">
            {{#each ../subclasses as |subclass|}}
              {{#if (eq subclass.class classItem.id)}}
              <label class="subclass-item">
                <input 
                  type="checkbox" 
                  name="subclass_{{subclass.id}}" 
                  checked 
                />
                {{subclass.name}}
              </label>
              {{/if}}
            {{/each}}
          </div>
          {{/if}}
        </div>
        {{/each}}
      </div>
    </div>

    <!-- ПРАВАЯ КОЛОНКА: Кнопки -->
    <div class="generator-right">
      <h3>Действия</h3>

      <div class="button-group">
        <button 
          id="bpnb-create" 
          type="button" 
          class="btn btn-primary"
        >
          <i class="fas fa-user-plus"></i> Создать персонажа
        </button>
        <button 
          id="bpnb-random-full" 
          type="button" 
          class="btn btn-secondary"
        >
          <i class="fas fa-dice-d20"></i> Полная рандомизация
        </button>
      </div>

      <div class="info-box">
        <p><strong>Создать персонажа</strong> — генерирует с выбранными классами</p>
        <p><strong>Полная рандомизация</strong> — полностью случайный персонаж</p>
      </div>
    </div>
  </div>
</form>

